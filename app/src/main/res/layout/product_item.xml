<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="10dp">

    <TextView
        android:id="@+id/productIdItemTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="1"
        android:textAlignment="center"
        android:textSize="20sp"
        tools:text="1" />

    <TextView
        android:id="@+id/productNameItemTextView"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="10dp"
        android:layout_toStartOf="@+id/productQtyItemTextView"
        android:layout_toEndOf="@+id/productIdItemTextView"
        android:text="Item"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/qtyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp"
        android:text="шт"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/productQtyItemTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="10dp"
        android:layout_toStartOf="@+id/qtyName"
        android:text="1.5"
        android:textSize="20sp" />
</RelativeLayout>