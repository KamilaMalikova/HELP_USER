<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="30dp">

    <TextView
        android:id="@+id/stockDocInventoryNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:layout_toStartOf="@+id/stockDocInventoryQtyTextView"
        android:layout_toEndOf="@+id/stockDocInventoryIdTextView"
        android:text="TextView"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/stockDocInventoryQtyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:text="TextView"
        android:textSize="24dp"/>

    <TextView
        android:id="@+id/stockDocInventoryIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:text="1"
        android:textSize="24dp"
        android:layout_marginVertical="10dp"/>
</RelativeLayout>