<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addProductLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.products.fragments.AddProductFragment"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/addProductNameTextEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/productName"
        android:inputType="textPersonName"
        android:textSize="20sp"
        android:backgroundTint="#009688"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:importantForAutofill="no" />


    <Spinner
        android:id="@+id/categorySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:autofillHints="@string/category"
        android:backgroundTint="#009688"
        android:contentDescription="@string/category"
        android:outlineProvider="bounds"
        android:scrollbarStyle="outsideOverlay" />

    <Spinner
        android:id="@+id/unitSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:autofillHints="@string/measureUnit"
        android:backgroundTint="#009688"
        android:contentDescription="@string/measureUnit"
        android:spinnerMode="dropdown" />


    <EditText
        android:id="@+id/costTextNumberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/cost"
        android:ems="10"
        android:backgroundTint="#009688"
        android:textSize="20sp"
        android:inputType="numberDecimal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/quantityTextNumberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/quantity"
        android:ems="10"
        android:textSize="20sp"
        android:backgroundTint="#009688"
        android:inputType="numberDecimal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:importantForAutofill="no" />

    <Button
        android:id="@+id/addProductSaveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="30dp"
        android:background="@drawable/button_border"
        android:text="@string/save"
        android:paddingHorizontal="10dp"/>
</LinearLayout>

</ScrollView>